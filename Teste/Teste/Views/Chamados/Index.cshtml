@model IEnumerable<Teste.Models.Chamado>

@{
    ViewBag.Title = "Index";
    var chamadosVM = Model.Select(c =>
        new Teste.Models.ViewModels.ChamadoVM(c));
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Usuario.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataUltimaAtualizacao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in chamadosVM)
    {
        <tr class="@item.StatusClass">
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataUltimaAtualizacao)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ChamadoId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ChamadoId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ChamadoId })
            </td>
        </tr>
    }

</table>
